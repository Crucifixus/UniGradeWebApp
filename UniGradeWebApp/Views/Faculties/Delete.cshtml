@model UniGradeWebApp.Faculty

@{
    ViewData["Title"] = "Delete";
}

<h1>Видалення</h1>

<h3>Ви впевнені що хочете видалити цей факультет?</h3>
<div>
    <h4>Faculty</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FacName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FacName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FacFoundingYear)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FacFoundingYear)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="FacId" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">Назад до списку факультетів</a>
    </form>
</div>

@model UniGradeWebApp.Faculty

@{
    ViewData["Title"] = "Edit";
}

<h1>Змінення</h1>

<h4>Факультет</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FacId" />
            <div class="form-group">
                <label asp-for="FacName" class="control-label"></label>
                <input asp-for="FacName" class="form-control" />
                <span asp-validation-for="FacName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FacFoundingYear" class="control-label"></label>
                <input asp-for="FacFoundingYear" class="form-control" />
                <span asp-validation-for="FacFoundingYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти зміни" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад до списку факультетів</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

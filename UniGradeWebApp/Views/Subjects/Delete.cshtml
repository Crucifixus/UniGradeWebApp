@model UniGradeWebApp.Subject

@{
    ViewData["Title"] = "Delete";
}

<h1>Видалення</h1>

<h3>Ви впевнені що хочете видалити цю дисципліну?</h3>
<div>
    <h4>Дисципліна</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SbjName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SbjName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SbjTeach)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SbjTeach)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SbjCathNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SbjCathNavigation.CathName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="SbjId" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        @Html.ActionLink("Назад до дисциплін кафедри", "Index", new {id = @ViewBag.CathId, name = @ViewBag.CathName})
    </form>
</div>

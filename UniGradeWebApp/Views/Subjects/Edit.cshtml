@model UniGradeWebApp.Subject

@{
    ViewData["Title"] = "Edit";
}

<h1>Змінення</h1>

<h4>Дисципліна</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SbjId" />
            <div class="form-group">
                <label asp-for="SbjName" class="control-label"></label>
                <input asp-for="SbjName" class="form-control" />
                <span asp-validation-for="SbjName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SbjTeach" class="control-label"></label>
                <input asp-for="SbjTeach" class="form-control" />
                <span asp-validation-for="SbjTeach" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти зміни" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Назад до дисциплін кафедри", "Index", new {id = @ViewBag.CathId, name = @ViewBag.CathName})
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

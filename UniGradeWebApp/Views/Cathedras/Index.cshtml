@model IEnumerable<UniGradeWebApp.Cathedra>

@{
    ViewData["Title"] = "Кафедри за факультетом";
}

<h1>Кафедри за факультетом @ViewBag.FacName</h1>

<p>
    @Html.ActionLink("Додати нову кафедру", "Create", new {FacId = @ViewBag.FacId})
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CathName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CathName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CathId">Змінити</a> |
                <a asp-action="Details" asp-route-id="@item.CathId">Групи</a> |
                <a asp-action="Details2" asp-route-id="@item.CathId">Дисципліни</a> |
                <a asp-action="Delete" asp-route-id="@item.CathId">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>

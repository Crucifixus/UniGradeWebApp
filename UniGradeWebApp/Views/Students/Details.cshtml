@model UniGradeWebApp.Student

@{
    ViewData["Title"] = "Details";
}

<h1>Деталі</h1>

<div>
    <h4>Студент</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StnFullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StnFullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StnGrpNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StnGrpNavigation.GrpId)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.StnId">Змінити</a> |
    @Html.ActionLink("Назад до студентів групи", "Index", new {id = @ViewBag.GrpId, name = @ViewBag.GrpName})
</div>

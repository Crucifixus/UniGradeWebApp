@model UniGradeWebApp.Student

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StnId" />
            <div class="form-group">
                <label asp-for="StnFullName" class="control-label"></label>
                <input asp-for="StnFullName" class="form-control" />
                <span asp-validation-for="StnFullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StnGrp" class="control-label"></label>
                <select asp-for="StnGrp" class="form-control" asp-items="ViewBag.StnGrp"></select>
                <span asp-validation-for="StnGrp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

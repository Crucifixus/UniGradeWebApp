@model UniGradeWebApp.Grade

@{
    ViewData["Title"] = "Create";
}

<h1>Додавання балу студента @ViewBag.StnName</h1>

<h4>Бал</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GrdSbj" class="control-label"></label>
                <select asp-for="GrdSbj" class ="form-control" asp-items="ViewBag.GrdSbj"></select>
            </div>
            <div class="form-group">
                <label asp-for="GrdResult" class="control-label"></label>
                <input asp-for="GrdResult" class="form-control" />
                <span asp-validation-for="GrdResult" class="text-danger"></span>
            </div>
            <input type="hidden" value="@ViewBag.StnId" name="StnId" />
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Назад до оцінок студента", "Index", new {id = @ViewBag.StnId, name = @ViewBag.StnFullName})
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

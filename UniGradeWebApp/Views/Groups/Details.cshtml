@model UniGradeWebApp.Group

@{
    ViewData["Title"] = "Details";
}

<h1>Деталі</h1>

<div>
    <h4>Група</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GrpName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GrpName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GrpEnrollmentYear)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GrpEnrollmentYear)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GrpCathNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GrpCathNavigation.CathName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.GrpId">Змінити</a> |
    @Html.ActionLink("Назад до груп кафедри", "Index", new {id = @ViewBag.CathId, name = @ViewBag.CathName})
</div>
